#include<stdio.h>
#include<conio.h>
int main()
{
    char x;
    int a, b;
    printf("\n   Enter any operation ( + , - , * , / ) : ");
    scanf("%c", &x);
    printf("\n   Enter two numbers : ");
    scanf("%d %d", &a, &b);
    switch(x)
    {
    case '+':
        printf("\n   %d + %d = %d", a, b, a+b);
        break;
    case '-':
        printf("\n   %d - %d = %d", a, b, a-b);
        break;
    case '*':
        printf("\n   %d * %d = %d", a, b, a*b);
        break;
    case '/':
        printf("\n   %d / %d = %d", a, b, a/b);
        break;
    default:
        printf("Not a right operation");
    }
    getch();
    return 0;
}
